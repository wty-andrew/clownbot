<?xml version="1.0"?>
<launch>
  <env name="GAZEBO_MODEL_PATH" value="$(find clownbot_gazebo)/models:$(optenv GAZEBO_MODEL_PATH)"/>

  <arg name="gui" default="true" />
  <arg name="debug" default="false"/>
  <arg name="world" default="empty"/>

  <include file="$(find clownbot_description)/launch/robot_state.launch"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="$(arg gui)" />
    <arg name="debug" value="$(arg debug)"/>
    <arg name="world_name" value="$(find clownbot_gazebo)/worlds/$(arg world).world"/>
  </include>

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"
        args="-param robot_description -urdf -model clownbot" />
</launch>
